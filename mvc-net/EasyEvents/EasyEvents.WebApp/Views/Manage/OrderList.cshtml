@model PagedList.IPagedList<EasyEvents.WebApp.Models.CateringOrder>
@using PagedList.Mvc;
@if (Model.Count == 0)
{
    <span>Sorry, no results found</span>
}
else
{
    <div class="row">
        <div class="col-sm-6 custyle">
            <table class="table table-striped custab">
                <thead>
                    <tr>
                        <th>Guid</th>
                        <th>Order Id</th>
                        <th>Name</th>
                        <th>Phone</th>
                        <th>Email</th>
                        <th>Address</th>
                        <th>Package</th>
                        <th>Event Date</th>
                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.GUID</td>
                        <td>@item.ID</td>
                        <td>@item.Name</td>
                        <td>@item.Phone</td>
                        <td>@item.Email</td>
                        <td>@item.Address</td>
                        <td>@item.PackageId</td>
                        <td>@item.EventDate</td>
                        <td class="text-center">
                            <a data-ajax="true" data-ajax-method="GET" data-ajax-mode="replace" data-ajax-update="#divManage" 
                                    class='btn btn-info btn-xs' href="/Manage/EditOrder?id=@item.ID"><span class="glyphicon glyphicon-edit"></span>Edit</a>
                        </td>
                    </tr>
                }
            </table>
            @Html.PagedListPager(Model, page => Url.Action("OrderList",
            new { page }), PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing("divManage"))
        </div>
    </div>
}
