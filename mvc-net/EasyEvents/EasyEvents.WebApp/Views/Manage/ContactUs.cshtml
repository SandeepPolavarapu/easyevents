@model PagedList.IPagedList<EasyEvents.WebApp.Models.ContactUs>
@using PagedList.Mvc;
@if (Model.Count == 0)
{
    <span>Sorry, no results found</span>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>
                  Query Type
                </th>
                <th>Name
                </th>
                <th>Email
                </th>
                <th>Phone
                </th>
                <th>Message
                </th>
                <th>Requested On
                </th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {   
        <tr>
            <td>@item.QueryType</td>
            <td>@item.Name</td>
            <td>@item.Email</td>
            <td>@item.Phone</td>
            <td>@item.Message</td>
            <td>@item.DBCreatedUtc</td>
        </tr>
   
        }
    </table>
    @Html.PagedListPager(Model, page => Url.Action("ContactUs",
    new { page }))
}