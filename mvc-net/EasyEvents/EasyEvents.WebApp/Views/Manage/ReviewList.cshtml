@model PagedList.IPagedList<EasyEvents.WebApp.Models.CateringReview>
@using PagedList.Mvc;
@if (Model.Count == 0)
{
    <span>Sorry, no results found</span>
}
else
{
    <div class="row">
        <div class="col-sm-6 custyle">
            <table class="table table-striped custab">
                <thead>
                    <tr>
                        <th>Display Name</th>
                        <th>Order Id</th>
                        <th>Rating</th>
                        <th>Review</th>
                        <th>IsActive</th>                        
                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.DisplayName</td>
                        <td>@item.OrderId</td>
                        <td>@item.Rating</td>
                        <td>@item.Review</td>
                        <td>@item.IsActive</td>                        
                        <td class="text-center">
                            <a data-ajax="true" data-ajax-method="GET" data-ajax-mode="replace" data-ajax-update="#divManage" 
                                    class='btn btn-info btn-xs' href="/Manage/EditReview?id=@item.ID"><span class="glyphicon glyphicon-edit"></span>Edit</a>
                        </td>
                    </tr>
                }
            </table>
            @Html.PagedListPager(Model, page => Url.Action("OrderList",
            new { page }), PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing("divManage"))
        </div>
    </div>
}
