@model EasyEvents.WebApp.Models.CateringReview
<div class="row">
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    <div class="col-sm-12">
        @using (Ajax.BeginForm("CreateReview", "Manage", new AjaxOptions
                {
                    HttpMethod = "Post",
                    UpdateTargetId = "divManage",
                    InsertionMode = InsertionMode.Replace
                }))
        {
            @Html.ValidationSummary(true)                 
            @Html.HiddenFor(model => model.ID)
            <div class="form-group">
                @Html.LabelFor(model => model.DisplayName, "Display Name", new { @class = "col-sm-3 control-label" })

                <div class="col-sm-9">
                    @Html.TextBoxFor(model => model.DisplayName, new { @class = "form-control", @placeholder = "Display Name" })
                    @Html.ValidationMessageFor(model => model.DisplayName)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.OrderId,"Order Id", new { @class = "col-sm-3 control-label" })

                <div class="col-sm-9">
                    @Html.TextBoxFor(model => model.OrderId, new { @class = "form-control", @placeholder = "Order Id" })
                    @Html.ValidationMessageFor(model => model.OrderId)
                </div>
            </div>     
            <div class="form-group">
                @Html.LabelFor(model => model.Rating, "Rating", new { @class = "col-sm-3 control-label" })

                <div class="col-sm-9">
                    @Html.TextBoxFor(model => model.Rating, new { @class = "form-control", @placeholder = "Rating" })
                    @Html.ValidationMessageFor(model => model.Rating)
                </div>
            </div>            
            <div class="form-group">
                @Html.LabelFor(model => model.Review, "Review", new { @class = "col-sm-3 control-label" })

                <div class="col-sm-9">
                    @Html.TextAreaFor(model => model.Review, new { @class = "form-control", @rows = 5, @placeholder = "Review" })
                    @Html.ValidationMessageFor(model => model.Review)
                </div>
            </div>              
            <div class="form-group">
                @Html.LabelFor(model => model.IsActive, "IsActive", new { @class = "col-sm-3 control-label" })

                <div class="col-sm-9">
                    <div class="checkbox">
                        @Html.CheckBoxFor(model => model.IsActive)
                    </div>
                    @Html.ValidationMessageFor(model => model.IsActive)
                </div>
            </div>           
            <div class="col-xs-12 form-group">
                <button class="btn btn-primary" type="submit">Submit</button>
            </div>
           
        }
    </div>
</div>

