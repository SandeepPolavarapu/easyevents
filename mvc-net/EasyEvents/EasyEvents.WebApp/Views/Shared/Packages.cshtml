@model List<EasyEvents.WebApp.Models.CatererPackage>
<div class="headline"><h2>Catering Packages</h2></div>
<div id="cateringpackages" class="row margin-bottom-20">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="thumbnails thumbnail-style thumbnail-kenburn div-cursor" onclick="location.href = '/Vijayawada/Catering/Package-@item.PackageId'">
                <div class="thumbnail-img">
                    <div class="overflow-hidden">
                        <img class="img-responsive" src="@("/Images/Vamsi" + item.PackageId+".jpg")" alt=" " />
                    </div>
                </div>
                <div class="caption">
                    <h3><a class="hover-effect" href="/Vijayawada/Catering/Package-@item.PackageId">@item.Name</a></h3>
                    <ul class="list-unstyled who margin-bottom-30">
                        <li><i class="fa fa-rupee"></i> @StringFormatter.PriceFormatter(item.Price)</li>
                        <li><i class="fa fa-check"></i>Package Contains <b>@item.ItemsCount</b> Items</li>
                        @*<li><small><em>Min PAX: @StringFormatter.NumberFormatter(item.MinPerson)</em></small></li>*@
                    </ul>
                </div>
            </div>
        </div>
    }
