@model EasyEvents.WebApp.Models.ContactUs
@{
    ViewBag.Title = "Contact Us";
}
<div class="container content">
    <div class="row margin-bottom-30">
        <div class="col-md-9 mb-margin-bottom-30">
            <div class="headline">
                <h2>
                    Contact Form
                </h2>
            </div>
            <div>
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success">@TempData["Success"]</div>
                }
                @using (Html.BeginForm())
                {
                    @Html.ValidationSummary(true)
                    <label>
                        Name <span class="color-red">*</span>
                    </label>
                    <div class="row margin-bottom-20">
                        <div class="col-md-7 col-md-offset-0">
                            @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @placeholder = "Name" })
                            @Html.ValidationMessageFor(model => model.Name)
                        </div>
                    </div>
                    <label>
                        Phone <span class="color-red">*</span>
                    </label>
                    <div class="row margin-bottom-20">
                        <div class="col-md-7 col-md-offset-0">
                           @Html.TextBoxFor(model => model.Phone, new { @class = "form-control", @placeholder = "Phone" })
                        @Html.ValidationMessageFor(model => model.Phone)
                        </div>
                    </div>
                    <label>
                        Email <span class="color-red">*</span>
                    </label>
                    <div class="row margin-bottom-20">
                        <div class="col-md-7 col-md-offset-0">
                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "Email" })
                            @Html.ValidationMessageFor(model => model.Email)
                        </div>
                    </div>
                    <label>
                        Message <span class="color-red">*</span>
                    </label>
                    <div class="row margin-bottom-20">
                        <div class="col-md-11 col-md-offset-0">
                            @Html.TextAreaFor(model => model.Message, new { @class = "form-control", @rows = 5, @placeholder = "Write your query here" })
                            @Html.ValidationMessageFor(model => model.Message)
                        </div>
                    </div>
                    @Html.HiddenFor(model => model.QueryType);
                    <p>
                        <button type="submit" class="btn-u">
                            Send Message
                        </button>
                    </p>
                }
            </div>
        </div>
        <!--/col-md-9-->
        <div class="col-md-3">
            <!-- Contacts -->
            <div class="headline">
                <h2>
                    Contacts
                </h2>
            </div>
            <ul class="list-unstyled who margin-bottom-30">
                <li><a href="#"><i class="fa fa-home"></i>@System.Web.Configuration.WebConfigurationManager.AppSettings["AddressLine1"] , @System.Web.Configuration.WebConfigurationManager.AppSettings["AddressLine2"] </a></li>
                <li><a href="#"><i class="fa fa-envelope"></i>support@easyevents.in</a></li>
                <li><a href="#"><i class="fa fa-phone"></i>(+91) @System.Web.Configuration.WebConfigurationManager.AppSettings["Phone"]  </a></li>
                <li><a href="http://www.facebook.com/easyevents.in" target="_blank"><i class="fa fa-facebook"></i>http://www.facebook.com/easyevents.in</a></li>
            </ul>
